<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户ID："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ed_view"
            android:id="@+id/ed_userId" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/ed_userName"
            android:layout_width="match_parent"
            android:background="@drawable/ed_view"
            android:layout_height="30dp"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cookie："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/ed_cookie"
            android:layout_width="match_parent"
            android:background="@drawable/ed_view"
            android:layout_height="200dp"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模式："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <RadioGroup
            android:id="@+id/ra_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ra_qiandui"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="前对" />

            <RadioButton
                android:id="@+id/ra_houdui"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="后对" />

            <RadioButton
                android:id="@+id/ra_hunda"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="混打" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限定余额："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/ed_moneyy"
            android:layout_width="match_parent"
            android:background="@drawable/ed_view"
            android:layout_height="30dp"
            android:padding="5dp" />
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_save"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:text="保存" />


</LinearLayout>